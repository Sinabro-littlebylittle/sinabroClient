<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".sideBarMenu.settings.UsePolicyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

       <!-- 상단 뒤로가기 레이아웃-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/back_ibtn"
                android:layout_width="42.5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/back" />

            <!-- 설정 메뉴명 -->
            <TextView
                android:id="@+id/menuTitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:text="이용 약관 및 정책"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- 가로 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/menuTitle_tv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp"
                android:background="#BCBCBC" />

        </RelativeLayout>

        <!--레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:id="@+id/Notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="위치기반서비스 이용약관"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/Policy_Lacation_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!--  레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="개인정보처리방침"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/Policy_policy_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!--  레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="법적 공지 / 정보 제공처"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/Policy_Legal_imgbtn"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow"
                android:text="Terms of Use &amp; Policy" />

        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />



        <!--레이아웃-->
        <LinearLayout
            android:id="@+id/Setting_page_Delete_histoty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="오픈소스 라이선스"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/Policy_opensource_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!-- 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="지적편집도 제공의 한계 및 책임"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/Policy_Limit_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />



    </LinearLayout>

</FrameLayout>